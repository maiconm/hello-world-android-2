<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ListaActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:drawableBottom="@drawable/lista_icon"
            android:id="@+id/btLista1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lista - 1"/>

        <Button
            android:drawableBottom="@drawable/lista_icon"
            android:id="@+id/btLista2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lista - 2"/>

        <Button
            android:drawableBottom="@drawable/ic_error_outline_black_24dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/btProva"
            android:text="Prova - 1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:drawableBottom="@drawable/lista_icon"
            android:id="@+id/btLista3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Lista - 3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/exercicio1"
            android:text="Exercio 1"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>