<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Genius">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Aluno"
                android:id="@+id/btnAluno"
                android:background="@color/colorPrimary"
                android:layout_gravity="right"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ranking"
                android:id="@+id/btnRanking"
                android:background="@color/colorPrimary"
                android:layout_gravity="right"
                />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginBottom="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FASE ATUAL: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFase"
                android:text="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:text="01"
                android:textSize="30dp"
                android:id="@+id/btnPrimeiro"
                android:background="@color/colorButton"
                />
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:text="02"
                android:textSize="30dp"
                android:id="@+id/btnSegundo"
                android:background="@color/colorButton"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:text="03"
                android:textSize="30dp"
                android:id="@+id/btnTerceiro"
                android:background="@color/colorButton"
                />
            <Button
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:text="04"
                android:textSize="30dp"
                android:id="@+id/btnQuarto"
                android:background="@color/colorButton"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIDA ATUAL: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVida"
                android:text="3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Start"
                android:id="@+id/btnStart"
                android:width="200dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>